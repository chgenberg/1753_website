{
  "name": "1753-skincare-backend",
  "version": "1.0.0",
  "description": "Backend API for 1753 Skincare e-commerce platform",
  "main": "dist/index.js",
  "scripts": {
    "dev": "nodemon src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "backup": "npx ts-node --transpile-only scripts/backupDatabase.ts backup",
    "restore": "npx ts-node --transpile-only scripts/backupDatabase.ts restore",
    "backup:daily": "npx ts-node --transpile-only scripts/backupDatabase.ts backup ./backups daily_backup_$(date +%Y%m%d).json",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "import:products": "ts-node --transpile-only src/scripts/importProductsToPrisma.ts",
    "import:reviews": "ts-node --transpile-only src/scripts/importReviewsFromCSV.ts",
    "import:all": "npm run import:products && npm run import:reviews",
    "prisma:migrate": "prisma migrate dev",
    "prisma:generate": "prisma generate",
    "prisma:studio": "prisma studio",
    "translate:db": "ts-node --transpile-only src/scripts/translate-db.ts",
    "seed:raw-materials": "ts-node --transpile-only src/scripts/seedRawMaterials.ts",
    "generate:images": "ts-node --transpile-only scripts/generateRawMaterialImages.ts",
    "generate:image": "ts-node --transpile-only scripts/generateRawMaterialImages.ts -- --single",
    "test:ongoing": "ts-node --transpile-only scripts/testOngoingConnection.ts"
  },
  "dependencies": {
    "@prisma/client": "^6.12.0",
    "@types/bcrypt": "^6.0.0",
    "@types/pdf-parse": "^1.1.5",
    "axios": "^1.10.0",
    "bcrypt": "^6.0.0",
    "compression": "^1.7.4",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "csv-parse": "^6.1.0",
    "csv-parser": "^3.2.0",
    "date-fns": "^2.30.0",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "express-validator": "^7.0.1",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "lodash": "^4.17.21",
    "morgan": "^1.10.0",
    "nodemailer": "^6.9.8",
    "openai": "^5.8.2",
    "pdf-parse": "^1.1.1",
    "prisma": "^6.12.0",
    "winston": "^3.11.0",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@types/compression": "^1.7.5",
    "@types/cookie-parser": "^1.4.6",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.8",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/lodash": "^4.14.202",
    "@types/morgan": "^1.9.9",
    "@types/node": "^20.9.2",
    "@types/nodemailer": "^6.4.14",
    "@types/supertest": "^2.0.16",
    "@typescript-eslint/eslint-plugin": "^6.12.0",
    "@typescript-eslint/parser": "^6.12.0",
    "eslint": "^8.54.0",
    "jest": "^29.7.0",
    "nodemon": "^3.0.2",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.3.2"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
